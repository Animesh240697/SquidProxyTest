pipeline {
    agent any

    parameters {
        choice(name: 'PROXY_GROUP', choices: ['proxy_group1', 'proxy_group2', 'proxy_group3'], description: 'Select the proxy group to update')
    }

    environment {
        ANSIBLE_HOST_KEY_CHECKING = 'False'
    }

    stages {
        stage('Deploy Squid Proxy') {
            steps {
                sshagent(['vcs_cloudops']) {
                    script {
                        def proxy_group = params.PROXY_GROUP

                        sh """
                        ansible-playbook -i inventory/hosts --ask-become-pass -e GROUP_NAME=${proxy_group} site.yml -vvv
                        """
                    }
                }
            }
        }
    }
}

